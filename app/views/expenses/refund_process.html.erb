<section class="content-header">
  <h1>
    Refund
    <small>Source</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a>
        <i class="fa fa-dashboard"></i>
        Home
      </a>
    </li>
    <li>Expense</li>
    <li class="active">Refund Process</li>
  </ol>
</section>
<hr/>
<section class="content">
  <div class="box box-success">
    <div class="box-header">
      <h4>
        Refund Information
      </h4>
    </div>
    <div class="box-body">
      <%= form_for @income, :url => process_refund_incomes_path, :method => :post, :html => {:class => "form-horizontal", :id => "income_form"} do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id  %>
        <%= f.hidden_field :expense_id, :value => @expense.id %>
        <%= f.hidden_field :income_category_id, :value=> @refund_category.id %>
        <%= f.hidden_field :amount_type, :value=> Income.amount_types['refund'].to_i %>
        <%= render :partial => 'income_form', :locals => {:f => f } %>
        <div class="box-footer">
          <div class="col-md-offset-1">
            <%= f.submit "Refund It..!!", :class => "btn btn-success"     %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
