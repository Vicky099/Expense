%section.content-header
  %h1
    Expense
    %small Record
  %ol.breadcrumb
    %li
      %a
        %i.fa.fa-dashboard
        Home
    %li.active Expense Record
%hr
%section.content
  .box.box-success
    .box-header
      %h4
        Expense Records
    .box-body
      = link_to "Add your expenses", new_expense_path, :class => "btn btn-sm btn-default"
      %br
      %br
      %table.table.table-responsive.table-bordered
        - if @expenses.empty?
          = "No any Expense Record"
        - else
          %tr
            %th Expense Category
            %th Amount
            %th Deposite Date
            %th Actions
          - @expenses.each do |expense|
            %tr
              %td= expense.expense_category.expense_source.to_s+' - '+expense.description.to_s
              %td= expense.amount
              %td= expense.date
              %td
                = link_to "Edit Record" , edit_expense_path(expense.id)
    = will_paginate @expenses , renderer: BootstrapPagination::Rails
